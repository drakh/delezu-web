{
    "compilerOptions": {
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ],
        "target": "es2017",
        "lib": [
            "dom",
            "es2017"
        ],
        "module":"commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictNullChecks": false,
        "declaration": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "removeComments": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "jsx": "react",
        "allowJs": true,
        "rootDir": "./src",
        "outDir": "dist",
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "./node_modules"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}
